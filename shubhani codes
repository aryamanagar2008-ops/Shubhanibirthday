    <!-- three.js for 3D animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

    <script>
        // Greeting Text Animation
        const greeting1 = document.getElementById('greeting-text-1');
        const greeting2 = document.getElementById('greeting-text-2');
        const greeting3 = document.getElementById('greeting-text-3');
        const photo1 = document.getElementById('photo-1');
        const photo2 = document.getElementById('photo-2');

        const animateText = (element, delay) => {
            setTimeout(() => {
                element.style.opacity = 1;
                element.style.animation = 'fadeIn 1.5s forwards';
            }, delay);
        };

        animateText(greeting1, 500);
        animateText(greeting2, 2000);
        animateText(greeting3, 3500);

        // Fade-in photo sections
        const animatePhotos = (element, delay) => {
            setTimeout(() => {
                element.style.opacity = 1;
                element.style.animation = 'slideInRight 1s forwards';
            }, delay);
        };
        
        animatePhotos(photo1, 5000);
        animatePhotos(photo2, 6000);

        // Three.js 3D photo animation
        let scene, camera, renderer, photoObject, heartParticles;
        const heartCount = 50;
        const mouse = { x: 0, y: 0 };
        const windowHalfX = window.innerWidth / 2;
        const windowHalfY = window.innerHeight / 2;

        const initThree = () => {
            const canvas = document.getElementById('photo-canvas');
            if (!canvas) return;

            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(75, canvas.clientWidth / canvas.clientHeight, 0.1, 1000);
            renderer = new THREE.WebGLRenderer({ canvas: canvas, antialias: true, alpha: true });
            renderer.setSize(canvas.clientWidth, canvas.clientHeight);

            // Add ambient light
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.8);
            scene.add(ambientLight);

            // Add a directional light
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.5);
            directionalLight.position.set(0, 1, 1);
            scene.add(directionalLight);

            // Create 3D photo
            const photoGeometry = new THREE.PlaneGeometry(3, 2);
            const photoTexture = new THREE.TextureLoader().load("uploaded:WhatsApp Image 2025-09-18 at 8.48.34 PM.jpeg-55427b0f-6062-4914-aaef-cdf4aa65ef27", () => {
                photoObject = new THREE.Mesh(photoGeometry, new THREE.MeshLambertMaterial({ map: photoTexture, side: THREE.DoubleSide }));
                scene.add(photoObject);
            });
            photoTexture.colorSpace = THREE.SRGBColorSpace;
            
            // Create floating hearts
            heartParticles = new THREE.Group();
            for (let i = 0; i < heartCount; i++) {
                const heartShape = new THREE.Shape();
                heartShape.moveTo(0.25, 0.25);
                heartShape.bezierCurveTo(0.25, 0.25, 0.2, 0, 0, 0);
                heartShape.bezierCurveTo(-0.3, 0, -0.3, 0.35, -0.3, 0.35);
                heartShape.bezierCurveTo(-0.3, 0.55, -0.1, 0.77, 0.25, 0.95);
                heartShape.bezierCurveTo(0.6, 0.77, 0.8, 0.55, 0.8, 0.35);
                heartShape.bezierCurveTo(0.8, 0.35, 0.8, 0, 0.5, 0);
                heartShape.bezierCurveTo(0.35, 0, 0.25, 0.25, 0.25, 0.25);

                const heartGeometry = new THREE.ShapeGeometry(heartShape);
                const heartMaterial = new THREE.MeshBasicMaterial({ color: 0xffe8e8, side: THREE.DoubleSide, transparent: true, opacity: 0.8 });
                const heartMesh = new THREE.Mesh(heartGeometry, heartMaterial);

                heartMesh.position.x = (Math.random() - 0.5) * 10;
                heartMesh.position.y = (Math.random() - 0.5) * 10;
                heartMesh.position.z = (Math.random() - 0.5) * 10;

                heartMesh.rotation.x = Math.random() * 2 * Math.PI;
                heartMesh.rotation.y = Math.random() * 2 * Math.PI;
                heartMesh.rotation.z = Math.random() * 2 * Math.PI;

                heartMesh.userData.speed = Math.random() * 0.005 + 0.001;
                heartMesh.userData.direction = new THREE.Vector3(Math.random() - 0.5, Math.random() - 0.5, Math.random() - 0.5).normalize();

                heartParticles.add(heartMesh);
            }
            scene.add(heartParticles);

            camera.position.z = 4;

            window.addEventListener('resize', onWindowResize, false);
            document.addEventListener('mousemove', onDocumentMouseMove, false);
        };

        const onWindowResize = () => {
            const canvas = document.getElementById('photo-canvas');
            if (!canvas) return;

            camera.aspect = canvas.clientWidth / canvas.clientHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(canvas.clientWidth, canvas.clientHeight);
        };

        const onDocumentMouseMove = (event) => {
            mouse.x = (event.clientX - windowHalfX) * 0.001;
            mouse.y = (event.clientY - windowHalfY) * 0.001;
        };

        const animate = () => {
            requestAnimationFrame(animate);

            if (photoObject) {
                photoObject.rotation.y += (mouse.x - photoObject.rotation.y) * 0.05;
                photoObject.rotation.x += (-mouse.y - photoObject.rotation.x) * 0.05;
            }

            if (heartParticles) {
                heartParticles.children.forEach(heart => {
                    heart.position.addScaledVector(heart.userData.direction, heart.userData.speed);
                    heart.rotation.x += heart.userData.speed * 2;
                    heart.rotation.y += heart.userData.speed * 2;

                    if (heart.position.length() > 5) {
                        heart.position.set(0, 0, 0);
                        heart.position.x = (Math.random() - 0.5) * 10;
                        heart.position.y = (Math.random() - 0.5) * 10;
                        heart.position.z = (Math.random() - 0.5) * 10;
                        heart.userData.direction = new THREE.Vector3(Math.random() - 0.5, Math.random() - 0.5, Math.random() - 0.5).normalize();
                    }
                });
            }

            renderer.render(scene, camera);
        };

        // Surprise Modal Logic
        const surpriseButton = document.getElementById('surprise-button');
        const surpriseModal = document.getElementById('surprise-modal');
        const closeModalButton = document.getElementById('close-modal-button');

        surpriseButton.addEventListener('click', () => {
            surpriseModal.classList.remove('hidden');
        });

        closeModalButton.addEventListener('click', () => {
            surpriseModal.classList.add('hidden');
        });

        // Close modal when clicking outside
        surpriseModal.addEventListener('click', (e) => {
            if (e.target === surpriseModal) {
                surpriseModal.classList.add('hidden');
            }
        });

        window.onload = function() {
            initThree();
            animate();
        };

    </script>
</body>
</html>
